<html>
    <head>
        <title>Test noisseur</title>
        <style>
            INPUT[type=text] {
        	    width: 600px
            }

            INPUT[type=submit] {
        	    width: 80px
            }

            .flabel {
                width : 250px
            }
        </style>

    </head>

<body>

    <h1>Common</h1>
    <hr>

    <h3>hw</h3>
    <form method="post" action="hw">
        <input type="hidden" name="action" value="hw"/>
        <table>
            <tr>
                <td class=flabel></td>
                <td><input type="submit" value="hw" /></td>
            </tr>
        </table>
    </form><br>

    <h3>ping</h3>
    <form method="post" action="ping">
        <input type="hidden" name="action" value="ping"/>
        <table>
            <tr>
                <td class=flabel>Text:</td>
                <td><input type="text" name="text1" value="zzz"/></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="ping" /></td>
            </tr>
        </table>
    </form><br>

    <h1>OCR</h1>
    <hr>

    <h3>imgproc</h3>
    <form method="post" action="imgproc_chain">
        <input type="hidden" name="action" value="imgproc_chain"/>
        <table>
            <tr>
                <td class=flabel>Image:</td>
                <td><input name="path" style="width:800px;" type="text" value="data/s_001.png" /></td>
            </tr>
            <tr>
                <td>Image Processor Chain:<br>
                    ( bw|sharpen|invert|scale(f)| border(20)|threshold(140)| rotate(90) ):</td>
                <td><input name="chain" style="width:800px;" type="text" value="scale(3.1)|sharpen|threshold(140)|bw|border(20)" /></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Execute" /></td>
            </tr>
        </table>
    </form><br>

